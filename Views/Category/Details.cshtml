@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Icon</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Icon)</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>