@model IEnumerable<ExpenseTracker.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h3>Categories</h3>
                <a asp-action="AddOrEdit" class="btn btn-primary">Add New Category</a>
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Icon</th>
                                <th class="sortable" onclick="sortTable(1)">Title <span class="sort-arrow"></span></th>
                                <th class="sortable" onclick="sortTable(2)">Type <span class="sort-arrow"></span></th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="icon-cell">@item.Icon</td>
                                    <td>@item.Title</td>
                                    <td>
                                        <span class="badge @(item.Type == "Income" ? "bg-success" : "bg-danger")">
                                            @item.Type
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="AddOrEdit" asp-route-id="@item.CategoryId"
                                            class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger"
                                            onclick="showDeleteModal('@item.CategoryId', '@item.Title')">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-message">
                    <p>No categories found.</p>
                    <a asp-action="AddOrEdit" class="btn btn-primary">Create Your First Category</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h5>Confirm Delete</h5>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete the category <strong id="categoryName"></strong>?</p>
            <p class="text-muted">This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
            <button class="btn btn-danger" onclick="confirmDelete()">Delete</button>
        </div>
    </div>
</div>



<script>
    let deleteUrl = '';

    function showDeleteModal(categoryId, categoryName) {
        document.getElementById('categoryName').textContent = categoryName;
        deleteUrl = '/Category/Delete/' + categoryId;
        document.getElementById('deleteModal').style.display = 'flex';
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').style.display = 'none';
    }

    function confirmDelete() {
        fetch(deleteUrl, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
            .then(response => {
                if (response.ok) {
                    closeDeleteModal();
                    location.reload(); // Refresh the page to show updated list
                } else {
                    alert('Error deleting category');
                }
            })
            .catch(error => {
                alert('Error deleting category');
            });
    }

    // Close modal when clicking outside
    document.addEventListener('click', function (e) {
        if (e.target.id === 'deleteModal') {
            closeDeleteModal();
        }
    });

    // Simple table sorting
    let sortStates = {};

    function sortTable(columnIndex) {
        const table = document.querySelector('.table');
        const tbody = table.querySelector('tbody');
        const rows = Array.from(tbody.querySelectorAll('tr'));
        const header = table.querySelectorAll('th')[columnIndex];
        const arrow = header.querySelector('.sort-arrow');

        // Clear other arrows and states
        document.querySelectorAll('.sort-arrow').forEach((a, i) => {
            if (i !== columnIndex) {
                a.textContent = '';
                sortStates[i] = null;
            }
        });

        // Toggle sort direction
        sortStates[columnIndex] = sortStates[columnIndex] === 'asc' ? 'desc' : 'asc';
        const isAsc = sortStates[columnIndex] === 'asc';
        arrow.textContent = isAsc ? '▲' : '▼';

        // Sort rows
        rows.sort((a, b) => {
            const aText = a.cells[columnIndex].textContent.trim();
            const bText = b.cells[columnIndex].textContent.trim();
            return isAsc ? aText.localeCompare(bText) : bText.localeCompare(aText);
        });

        // Append sorted rows
        rows.forEach(row => tbody.appendChild(row));
    }
</script>