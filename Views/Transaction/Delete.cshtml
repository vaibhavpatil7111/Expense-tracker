@model ExpenseTracker.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="widget">
                <div class="widget-title">
                    <h5>Delete Transaction</h5>
                </div>
                <hr />
                <h3 class="text-danger">Are you sure you want to delete this?</h3>
                <div class="card mt-3">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Model.Date.ToString("dd MMM yyyy")</dd>

                            <dt class="col-sm-4">Category</dt>
                            <dd class="col-sm-8">
                                <span class="category-icon">@Model.Category?.Icon</span>
                                @Model.Category?.Title
                            </dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">
                                <span class="category-badge @(Model.Category?.Type == "Income" ? "badge-success" : "badge-danger")">
                                    â‚¹@Model.Amount.ToString("N0")
                                </span>
                            </dd>

                            <dt class="col-sm-4">Note</dt>
                            <dd class="col-sm-8">@Model.Note</dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="TransactionId" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete Transaction
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
